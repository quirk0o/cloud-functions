#!/bin/bash
 
container_name=${AZURE_STORAGE_INPUT_CONTAINER}
source_folder=$1
 
for f in $source_folder
do
  echo "Uploading $f file..."
  az storage blob upload --file $f --container-name $container_name --name $(basename $f)
done
 
echo "List all blobs in container..."
az storage blob list --container-name $container_name
 
echo "Completed"
